{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipboard",
  "version": "0.1.6",
  "identifier": "com.dmxn.cliboard",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clipboard Manager",
        "width": 1000,
        "height": 800,
        "visible": false
      },
      {
        "label": "popup",
        "title": "Clipboard Popup",
        "width": 320,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/tipsxBase/clipboard/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg2ODY2MjEwNTJFMEM5NzAKUldSd3llQlNFR0tHaGhKMDRCT3ZmUGhnUFpJblBscTJpQklwdlVrRjEwUWt4VGlaK21aRDVvWFMK"
    }
  }
}
